<Page x:Class="Game.Battle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="Battle" 
      Loaded="On_Load">

    <Grid Margin="10,10,-10,0">
        <Label Content="Player's Turn" HorizontalAlignment="Left" Margin="181,70,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="NormalAttack" Content="Normal Attack" HorizontalAlignment="Left" Margin="37,70,0,0" VerticalAlignment="Top" Width="96" RenderTransformOrigin="0.572,-0.285" Height="34" FontWeight="Bold" Click="NormalAttack_Click"/>
        <Button x:Name="SpecialAttack" Content="Special Attack" HorizontalAlignment="Left" Margin="361,70,0,0" VerticalAlignment="Top" Width="93" Height="34" FontWeight="Bold" Click="SpecialAttack_Click"/>
        <ProgressBar HorizontalAlignment="Left" Height="21" Margin="37,122,0,0" VerticalAlignment="Top" Width="143" x:Name="ProgressPlayer" Minimum="0" />
        <ProgressBar HorizontalAlignment="Left" Height="21" Margin="311,122,0,0" VerticalAlignment="Top" Width="143" x:Name="ProgressNPC" Minimum="0"/>
    </Grid>
</Page>
